<!DOCTYPE html>
<html lang="es">
    <head>
        <meta charset="utf8">
        <title>{{title}}</title>
        <link href="/css/main.css" rel="stylesheet">
    </head>

    <body>
        <header>
            <h1>{{title}}</h1>
            <h3>{{application}}</h3>
        </header>
        {{#if navbuttons}}
            <nav>
                {{#each navbuttons}}
                    <button onclick="window.location.href='{{this.destination}}'">{{this.displayname}}</button>
                {{/each}}
            </nav>
        {{/if}}
        <div id="root">
            {{{body}}}
        </div>
    </body>
</html>